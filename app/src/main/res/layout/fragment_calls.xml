<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.CallsFragment"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Fragments.CallsFragment">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_below="@+id/ourUsername"
            android:layout_alignParentStart="true"
            android:layout_marginStart="24dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="10dp"
            android:layout_toStartOf="@+id/ourEmail"
            android:text="Email:"
            tools:layout_marginStart="30dp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ourProfile"
            android:layout_width="153dp"
            android:layout_height="118dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:padding="5dp"
            android:src="@drawable/user"
            app:civ_border_color="#FF000000"
            app:civ_border_width="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/backArrow"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/ourUsername"
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:layout_below="@+id/ourProfile"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="30dp"
            android:layout_marginRight="5dp"
            tools:text="Username" />

        <TextView
            android:id="@+id/ourEmail"
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:layout_below="@+id/ourUsername"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            tools:text="Email" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_below="@+id/ourProfile"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="10dp"
            android:layout_toStartOf="@+id/ourUsername"
            android:text="Username: "
            tools:layout_marginStart="30dp" />

    </RelativeLayout>
</RelativeLayout>
