<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/backArrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="?attr/actionModeCloseDrawable" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_below="@+id/ourUsername"
        android:layout_alignParentStart="true"
        android:layout_marginStart="24dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="10dp"
        android:layout_toStartOf="@+id/ourEmail"
        android:text="Email:"
        tools:layout_marginStart="30dp" />

    <TextView
        android:id="@+id/ourUsername"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:layout_below="@+id/ourProfile"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="5dp"
        tools:text="Username" />

    <TextView
        android:id="@+id/ourEmail"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:layout_below="@+id/ourUsername"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        tools:text="Email" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_below="@+id/ourProfile"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="10dp"
        android:layout_toStartOf="@+id/ourUsername"
        android:text="Username: "
        tools:layout_marginStart="30dp" />
</RelativeLayout>